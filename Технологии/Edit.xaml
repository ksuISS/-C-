<Window x:Class="Технологии.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Технологии"
        mc:Ignorable="d"
        Title="Edit" Height="450" Width="800">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="340" Margin="179,64,0,0" Stroke="Black" VerticalAlignment="Top" Width="585" Fill="#FFBBDCFA"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Source="/Новые технологии.png"/>
        <Button Content="Назад"  HorizontalAlignment="Left" Margin="10,138,0,0" VerticalAlignment="Top" Height="34" Width="147" Background="#FF0C4882" Foreground="White" Click="Button_Click_2"/>
        <Button Content="Добавить партнёра" HorizontalAlignment="Left" Margin="10,195,0,0" VerticalAlignment="Top" Height="34" Width="147" Background="#FF0C4882" Foreground="White" Click="Button_Click"/>

        <Label Content="Новые технологии: новый заказ" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="36" Width="263" FontSize="20" FontFamily="Bahnschrift Light SemiCondensed"/>
        <Label Content="Название партнёра" HorizontalAlignment="Left" Margin="205,84,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="part" DisplayMemberPath="Partner_name" HorizontalAlignment="Left" Margin="205,122,0,0" VerticalAlignment="Top" Width="138" Height="33"/>
        <Label Content="Продукт" HorizontalAlignment="Left" Margin="205,160,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="prod" DisplayMemberPath="Production_name" HorizontalAlignment="Left" Margin="205,192,0,0" VerticalAlignment="Top" Width="138" Height="33"/>
        <Label Content="Количество товаров" HorizontalAlignment="Left" Margin="205,234,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="kolvo" HorizontalAlignment="Left" Margin="205,265,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="138" Height="31"/>
        <DataGrid x:Name="spisokProd" Margin="400,84,99,68">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Материал" Binding="{Binding production_.Production_name}"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding QuantityProd}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Изменить" HorizontalAlignment="Left" Margin="205,366,0,0" VerticalAlignment="Top" Width="138" Height="24" Background="#FF0C4882" Foreground="White" Click="Button_Click_1"/>



    </Grid>
</Window>
