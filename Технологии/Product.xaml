<Window x:Class="Технологии.Product"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Технологии"
        mc:Ignorable="d"
        Title="Product" Height="450" Width="800">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="340" Margin="179,64,0,0" Stroke="Black" VerticalAlignment="Top" Width="585" Fill="#FFBBDCFA"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Source="/Новые технологии.png"/>
        <Button  FontFamily="Bahnschrift Light SemiCondensed" Content="Назад" HorizontalAlignment="Left" Margin="10,195,0,0" VerticalAlignment="Top" Height="34" Width="147" Background="#FF0C4882" Foreground="White" Click="Button_Click_1"/>

        <Label Content="Новые технологии" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="36" Width="192" FontSize="20" FontFamily="Bahnschrift Light SemiCondensed"/>
        <DataGrid AutoGenerateColumns="False" FontFamily="Bahnschrift Light SemiCondensed" x:Name="material" Margin="194,83,372,45">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding MaterialName}" Header="Материал"/>
                <DataGridTextColumn Binding="{Binding Quantity}" x:Name="kol" Header="Количество"/>

            </DataGrid.Columns>
        </DataGrid>
        <ComboBox DisplayMemberPath="Production_name" x:Name="product" HorizontalAlignment="Left" Margin="456,94,0,0" VerticalAlignment="Top" Width="293"/>
        <Label  FontFamily="Bahnschrift Light SemiCondensed" Content="Выберите продукцию" HorizontalAlignment="Left" Margin="456,70,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="kolvo" FontFamily="Bahnschrift Light SemiCondensed" HorizontalAlignment="Left" Margin="458,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="291" Height="20"/>
        <Label  FontFamily="Bahnschrift Light SemiCondensed" Content="Необходимое количество" HorizontalAlignment="Left" Margin="458,121,0,0" VerticalAlignment="Top"/>
        <Label x:Name="mincost" FontFamily="Bahnschrift Light SemiCondensed" Content="Минимальная стоимость: " HorizontalAlignment="Left" Margin="458,186,0,0" VerticalAlignment="Top"/>
        <Button  FontFamily="Bahnschrift Light SemiCondensed" Content="Рассчитать" HorizontalAlignment="Left" Margin="565,336,0,0" VerticalAlignment="Top" Height="30" Width="75" Background="#FF0C4882" Foreground="White" Click="Button_Click"/>
        <TextBox x:Name="param1"  FontFamily="Bahnschrift Light SemiCondensed" HorizontalAlignment="Left" Margin="457,247,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="291" PreviewTextInput="param1_PreviewTextInput"/>
        <Label  FontFamily="Bahnschrift Light SemiCondensed" Content="Параметр 1" HorizontalAlignment="Left" Margin="458,220,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="param2" FontFamily="Bahnschrift Light SemiCondensed" HorizontalAlignment="Left" Margin="457,295,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="291" PreviewTextInput="param2_PreviewTextInput"/>
        <Label  FontFamily="Bahnschrift Light SemiCondensed" Content="Параметр 2" HorizontalAlignment="Left" Margin="458,268,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
